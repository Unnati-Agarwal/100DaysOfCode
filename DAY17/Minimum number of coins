public class Solution
{
public static int findMinimumCoins(int amount)
    {
        // Write your code here.
        int arr[]={1,2,5,10,20,50,100,500,1000};
        int c=0;
        for(int i=8;i>=0;i--)
        {
            if(amount>=arr[i])
            {
                amount-=arr[i];
                i++;
                c++;
            }
        }
        return c;
}
}
